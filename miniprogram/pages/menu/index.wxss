/* pages/menu/index.wxss */
.menu-page {
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.menu-header {
  box-shadow: 0rpx 10rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
}

.header-bg {
  width: 100%;
  height: 400rpx;
}

.menu-body {
  margin-top: 20rpx;
  display: flex;
  height:calc(100vh - 420rpx);
}

.sider-menu {
  width: 200rpx;
}

.menu-item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}
.menu-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: -20rpx;
  width: 10rpx;
  height: 100%;
  background-color: var(--main-color);
  transition: all .25s ease-in;
}
.menu-item.active {
  position: relative;
  background: linear-gradient(to right, #e5e5e5, #f5f5f5);
  font-weight: bold
}

.menu-item.active::before {
  transform: translateX(20rpx);
}

.class-menu{
  background-color: white;
}